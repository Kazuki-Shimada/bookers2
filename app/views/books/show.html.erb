<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/show',books: @books, user: @user %>
      <%= render 'list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail<h1>
        <table class="table">
          <tr>
            <th>
              <%= image_tag @users.get_profile_image(100, 100) %><br />
              <%= link_to user_path(@users) do %>
                <p class="fs-6"><%= @books.user.name %></p>
              <% end %>
            </th>
            <td>
              <%= link_to book_path(@books) do %>
                <%= @books.title %>
              <% end %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <% if @books.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", books_path(@books), class: "btn btn-danger", method: :delete %>
            </td>
          </tr>
          <% end %>
        </table>

        <p><%= @book.title %></p>
        <p><%= @book.body %></p>
        <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book) %>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
    </div>
  </div>
</div>
