<div class="mx-auto w-75">
    <h1>User info</h1>
    <%= image_tag user.get_profile_image(100,100) %>
    <p>name</p>
    <%= user.name %>
    <p>introduction</p>
    <a class="btn btn-outline-secondary w-100 my-3" href="/users/:id/edit">
        <i class="fas fa-user-cog"></i>
    </a>
    <p class="btn btn-outline-secondary w-100 my-3">
        <%= link_to edit_user_path do %>
            <i class="fas fa-user-cog"></i>
        <% end %>
    </p>
</div>