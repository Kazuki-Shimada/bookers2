<div class="container px-5 px-sm-0">
  <div class="input-group">
    <%= form_with model: @user, method: :patch do |f| %>
    <h1>User info</h1>
    <% if @user.errors.any? %>
    <strong><%= @user.errors.count %>errors prohibited this obj from being saved:</strong>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    <p>Name</p>
    <%= f.text_field :name, class: "form-control" %>
    <p>Image</p>
    <%= f.file_field :profile_image, accept:"image/*" %>
    <p>Introduction</p>
    <%= f.text_area :introduction, class: "form-control" %>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>