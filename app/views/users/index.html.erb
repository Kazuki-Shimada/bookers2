<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'show',books: @books, user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(100, 100) %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", books_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>